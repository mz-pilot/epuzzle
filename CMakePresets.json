{
  "version": 4,
  "cmakeMinimumRequired": { "major": 3, "minor": 24, "patch": 0 },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "EPUZZLE_BUILD_APPS": "ON",
        "EPUZZLE_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64 (MSVC)",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": { "value": "x64", "strategy": "set" },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux x64 Debug",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" }
    },
    {
      "name": "linux-release",
      "displayName": "Linux x64 Release",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" }
    },
    {
      "name": "linux-tidy",
      "displayName": "Linux x64 Clang-Tidy",
      "inherits": "linux-debug", 
      "cacheVariables": { "EPUZZLE_ENABLE_CLANG_TIDY": "ON" }
    }
  ],
  "buildPresets": [
    { "name": "win-debug",   "configurePreset": "windows-x64", "configuration": "Debug" },
    { "name": "win-release", "configurePreset": "windows-x64", "configuration": "Release" },
    { "name": "lin-debug",   "configurePreset": "linux-debug" },
    { "name": "lin-release", "configurePreset": "linux-release" },
    { "name": "lin-tidy",    "configurePreset": "linux-tidy" }
  ],
  "testPresets": [
    { "name": "test-win-debug",   "configurePreset": "windows-x64", "configuration": "Debug", "output": { "outputOnFailure": true } },
    { "name": "test-win-release", "configurePreset": "windows-x64", "configuration": "Release", "output": { "outputOnFailure": true } },
    { "name": "test-lin-debug",   "configurePreset": "linux-debug", "output": { "outputOnFailure": true } },
    { "name": "test-lin-release", "configurePreset": "linux-release", "output": { "outputOnFailure": true } }
  ]
}
